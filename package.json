{
  "name": "lexiflood",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:api": "tsx watch api/src/index.ts",
    "dev:front": "vite --config front/vite.config.ts --root front",
    "dev:all": "npm-run-all --parallel dev:api dev:front",
    "build:api": "tsc -p api/tsconfig.json",
    "build:front": "vite build --config front/vite.config.ts --root front",
    "build": "npm-run-all --parallel build:api build:front",
    "preview": "vite preview --config front/vite.config.ts --root front",
    "start:api": "node --enable-source-maps api/dist/index.js"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "an-array-of-french-words": "^2.0.0",
    "axios": "^1.7.7",
    "fastify": "^4.28.1",
    "pinia": "^2.2.2",
    "quasar": "^2.17.2",
    "vue": "^3.4.38"
  },
  "devDependencies": {
    "@quasar/extras": "^1.16.12",
    "@vitejs/plugin-vue": "^5.1.3",
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "sass": "^1.77.8",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.8"
  }
}
